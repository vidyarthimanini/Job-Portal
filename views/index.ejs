<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Internship & Job Dashboard</title>
  </head>
  <body>
    <!-- Navbar -->

    <div class="ripple-background">
        <div class="circle xxlarge shade1"></div>
        <div class="circle xlarge shade2"></div>
        <div class="circle large shade3"></div>
        <div class="circle medium shade4"></div>
        <div class="circle small shade5"></div>

    <nav>
      <div class="logo">CarrerClick</div>
      <ul>
        <li><a href="#" class="active">Dashboard</a></li>
        <!-- <li><a href="#">Internships</a></li> -->
        <li><a href="/job">Jobs</a></li>
        <!-- <li><a href="#">Applications</a></li> -->
        <li><a href="/about">About Us</a></li>
        <li><a href="/login">LogIn</a></li>
      </ul>
    </nav>

    <!-- Dashboard Sections -->
    <div class="dashboard">
      <!-- Recommendations Section -->
      <section class="recommendations">
        <h2>Job Recommendations</h2>

        <div class="job-card">
          <div class="company-logo"></div>
          <div class="job-details">
            <h3>Software Developer Intern</h3>
            <p>Company: TechCo</p>
            <p>Location: San Francisco</p>
          </div>
          <button class="apply-btn">Apply Now</button>
        </div>

        <!-- Add more job cards as needed -->
      </section>

      <!-- Recent Applications Section -->
      <section class="recent-applications">
        <h2>Recent Applications</h2>
        <div class="application-card">
          <h3>Marketing Intern</h3>
          <p>Company: MarketingPro</p>
          <p>Status: Pending</p>
        </div>
        <!-- Add more application cards as needed -->
      </section>
    </div>

    <!-- Add more job recommendations -->
    <div class="recommendations">
      <h2>Companies Actively Hiring</h2>

      <div class="recommendation-card">
        <img src="\images\cisco.png" alt="Company 3 Logo" />
        <div class="recommendation-details">
          <h3>Cisco Inc.</h3>
          <p>Frontend Developer</p>
        </div>
        <button class="btn-apply">Apply Now</button>
      </div>

      <div class="recommendation-card">
        <img src="\images\google.png" alt="Company Logo" />
        <div class="recommendation-details">
          <h3>Google</h3>
          <p>Data Analyst</p>
        </div>
        <button class="btn-apply">Apply Now</button>
      </div>

      <div class="recommendation-card">
        <img src="\images\amex.png" alt="Company Logo" />
        <div class="recommendation-details">
          <h3>American Express</h3>
          <p>Product Intern</p>
          <p font aria-setsize="1">(For Women Only)</p>
        </div>
        <button class="btn-apply">Apply Now</button>
      </div>
      <!-- Add more recommendation cards as needed -->
    </div>

    <!-- Add more companies -->
    <div class="companies">
      <h2>More Companies Hiring</h2>

      <div class="company-card">
        <div class="company-details">
          <h3>BASKIN ROBINS</h3>
          <p>Full Stack Developer</p>
        </div>
        <button class="btn-view">View Details</button>
      </div>

      <!-- Add more company cards as needed -->
    </div>

    <script src="app.js"></script>
  </body>
</html>