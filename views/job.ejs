    <link rel="stylesheet" href="/css/job.css" />
    <title>Job Search</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 0;
        padding: 0;
        
      }

      .container {
        width: 80%;
        margin: 0 auto;
      }

      .navbar {
        background-color: #3498db;
        color: #fff;
        padding: 15px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 24px;
        margin: 0;
      }

      .nav-list {
        list-style: none;
        display: flex;
      }

      .nav-list li {
        margin-right: 20px;
      }

      .nav-list a {
        text-decoration: none;
        color: #fff;
        font-weight: bold;
        font-size: 16px;
      }

      .search-bar {
        display: flex;
        align-items: center;
      }

      .search-bar input {
        padding: 8px;
        margin-right: 10px;
        border: none;
        border-radius: 5px;
      }

      .search-bar button {
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        background-color: #2ecc71;
        color: #fff;
        cursor: pointer;
      }

      .job-list {
        padding: 50px 0;
      }

      .jobs li {
        background-color: #fff;
        margin-bottom: 20px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .jobs h3 {
        margin-bottom: 10px;
        color: #3498db;
      }

      .jobs p {
        margin-bottom: 10px;
        color: #555;
      }

      .apply-btn {
        background-color: #e74c3c;
        color: #fff;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
      }
    </style>
  </head>
